<div class="login-form">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <h2 class="text-center">Change your password</h2>
    <div class="field form-group">
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", type: "password", class: "form-control", placeholder: "Password", required: "required" %>
      <% if @minimum_password_length %>&nbsp;(Minimum <%= @minimum_password_length %> characters)
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", class: "form-control", placeholder: "Password confirmation", required: "required" %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Change my password", type: "submit", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="field clearfix text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>                                                                                                     

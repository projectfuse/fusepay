<div class="login-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h2 class="text-center">Sign up</h2>
    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text", class: "form-control", placeholder: "Email", required: "required" %>
    </div>
  
    <div class="field form-group">
      <%= f.password_field :password, autocomplete: "new-password", type: "password", class: "form-control", placeholder: "Password", required: "required" %>
      <% if @minimum_password_length %>&nbsp;(Minimum <%= @minimum_password_length %> characters)
      <% end %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password", class: "form-control", placeholder: "Password confirmation", required: "required" %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Sign up", type: "submit", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <div class="field clearfix text-center">
    <%- if controller_name != 'sessions' %>
      <%= link_to "Log in", new_session_path(resource_name) %><br />
    <% end %>
  </div>
</div>                                                      
